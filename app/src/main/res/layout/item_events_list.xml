<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/event_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/start_time_text_view"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/event_date_text_view"
        android:text="10:00 AM"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/end_time_text_view"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/start_time_text_view"
        android:text="11:00 AM"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/event_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/end_time_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/event_date_text_view"
        android:layout_toRightOf="@+id/start_time_text_view"
        android:text="New Text"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/event_title_text_view"
        android:layout_toRightOf="@+id/start_time_text_view"
        android:text="New Text"
        android:textColor="#000000" />
</RelativeLayout>